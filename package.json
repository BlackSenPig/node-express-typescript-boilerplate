{
    "name": "node-typescript-boilerplate",
    "version": "0.0.0",
    "description": "boilerplate to quick-start Node.js Express backend development in TypeScript.",
    "engines": {
        "node": ">= 16.13 <17"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/jest": "~28.1",
        "@types/node": "^18.6",
        "@types/node-schedule": "^2.1.0",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "~5.32",
        "@typescript-eslint/parser": "~5.32",
        "eslint": "~8.21",
        "eslint-config-prettier": "~8.5",
        "eslint-plugin-jest": "~26.7",
        "javascript-obfuscator": "^4.0.0",
        "jest": "~28.1",
        "prettier": "~2.7",
        "rimraf": "~3.0",
        "ts-jest": "~28.0",
        "ts-node": "^10.9.1",
        "tsutils": "~3.21",
        "typescript": "~4.7"
    },
    "scripts": {
        "start": "nodemon",
        "dev": "yarn run swagger && nodemon",
        "clean": "rimraf coverage build tmp",
        "prebuild": "npm run lint",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "build:release": "npm run clean && tsc -p tsconfig.release.json",
        "swagger": "yarn run tsoa spec && tsoa routes",
        "swagger route": "yarn run tsoa routes",
        "lint": "eslint . --ext .ts",
        "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "helmet": "^5.1.1",
        "mongoose": "^6.5.1",
        "node-schedule": "^2.1.0",
        "nodemon": "^2.0.19",
        "swagger-ui-express": "^4.5.0",
        "tslib": "~2.4.0",
        "tsoa": "^4.1.1",
        "validator": "^13.7.0"
    },
    "volta": {
        "node": "16.13.0"
    }
}