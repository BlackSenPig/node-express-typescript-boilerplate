{
    "name": "node-typescript-boilerplate",
    "version": "0.0.0",
    "description": "boilerplate to quick-start Node.js Express backend development in TypeScript.",
    "engines": {
        "node": ">= 18.17 <20"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.17",
        "@types/jest": "~29.5",
        "@types/node": "^20.4",
        "@types/node-schedule": "^2.1.0",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "~6.2",
        "@typescript-eslint/parser": "~6.2",
        "eslint": "~8.46",
        "eslint-config-prettier": "~8.9",
        "eslint-plugin-jest": "~27.2",
        "javascript-obfuscator": "^4.0.2",
        "jest": "~29.6",
        "prettier": "~3.0",
        "rimraf": "~5.0",
        "ts-jest": "~29.1",
        "ts-node": "^10.9.1",
        "tsutils": "~3.21",
        "typescript": "~5.1"
    },
    "scripts": {
        "start": "nodemon",
        "dev": "yarn run swagger && nodemon",
        "clean": "rimraf coverage build tmp",
        "prebuild": "npm run lint",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "build:release": "npm run clean && tsc -p tsconfig.release.json",
        "swagger": "yarn run tsoa spec && tsoa routes",
        "swagger route": "yarn run tsoa routes",
        "lint": "eslint . --ext .ts",
        "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "mongoose": "^7.4.1",
        "node-schedule": "^2.1.1",
        "nodemon": "^3.0.1",
        "swagger-ui-express": "^5.0.0",
        "tslib": "~2.6.1",
        "tsoa": "^5.1.1",
        "validator": "^13.9.0"
    },
    "volta": {
        "node": "18.17.0"
    }
}